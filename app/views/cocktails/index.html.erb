<% content_for(:title) do %>
  LongDrinks (<%= @cocktails.count %> cocktails so far...)
<% end %>

<% content_for(:description) do %>
  LongDrinks let you discover no less than <%= @cocktails.count %> cocktails
<% end %>


<div>
  <h1>Cocktails list:</h1>
  <div>
    <%= link_to "Create a new cocktail", new_cocktail_path %>
  </div>
  <hr>
  <% @cocktails.each do |cktl| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2><strong><%= link_to cktl.name, cktl %></strong></h2>
      </div>
      <div class="panel-body">
        <%= link_to " edit", edit_cocktail_path(cktl) %>
        <%= link_to " delete", cocktail_path(cktl),
        method: :delete,
        data: { confirm: "Are you sure ?" } %>
      </div>
    </div>
  <% end %>
</div>
